{
  "name": "echo_game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-s build:client build:server",
    "build:client": "tsc && vite build --outDir dist/client",
    "build:server": "tsc -p src/server/tsconfig.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "server": "tsc -p src/server/tsconfig.json && node dist/server/index.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "express": "^5.2.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}